@page "/"
@namespace Weaver.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weaver</title>
    <base href="~/" />
    <script defer type="text/javascript" src="_framework/blazor.server.js"></script>
    <script defer type="text/javascript" src="_content/MatBlazor/dist/matBlazor.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/mobile-drag-drop@2.3.0-rc.2/index.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/mobile-drag-drop@2.3.0-rc.2/default.css">
    <environment include="Development">
        <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
        <link rel="stylesheet" href="_content/MatBlazor/dist/matBlazor.css" />
        <link rel="stylesheet" href="_content/blazor-dragdrop/dragdrop.css" />
        <link rel="stylesheet" href="css/open-iconic/font/css/open-iconic-bootstrap.min.css" />
        <link rel="stylesheet" href="css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="_content/MatBlazor/dist/matBlazor.css" />
        <link rel="stylesheet" href="_content/blazor-dragdrop/dragdrop.css" />
        <link rel="stylesheet" href="css/site.min.css" />
    </environment>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script defer>
        MobileDragDrop.polyfill({
            // use this to make use of the scroll behaviour
            dragImageTranslateOverride: MobileDragDrop.scrollBehaviourDragImageTranslateOverride
        });
    </script>
</body>
</html>
